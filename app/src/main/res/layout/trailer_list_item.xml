<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_trailer_icon"
            android:layout_width="@dimen/drawable_image_dimen"
            android:layout_height="@dimen/drawable_image_dimen"
            app:srcCompat="@android:drawable/ic_media_play"
            android:tint="@color/colorPrimary"
            android:contentDescription="@string/tailer_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/trailer_textsize"
            android:id="@+id/tv_trailer_title"
            tools:text="Tailer Name"
            android:gravity="center" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/viewLineColor"/>

</LinearLayout>